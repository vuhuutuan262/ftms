<div>
  <%= f.fields_for :profile do |ff| %>
    <div class="row">
      <div class="row form-group">
        <div class="col-md-9 form-group">
          <div class="col-md-8">
            <%= ff.label :staff_code %>
            <%= ff.text_field :staff_code, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-9 form-group">
          <div class="col-md-8">
            <%= ff.label :location_id %>
            <%= select_profile_field "location", @supports.locations, ff %>
          </div>
          <%= link_to "#", data: {toggle: "modal",
            target: "#location-modal"} do %>
            <span class="glyphicon glyphicon-plus plus" aria-hidden="true"></span>
          <% end %>
        </div>
        <div class="col-md-6 profile-form">
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :join_div_date %>
            </div>
            <div class="col-md-7">
              <%= ff.text_field :join_div_date, value: @user.profile.join_div_date ?
                l(@user.profile.join_div_date, format: :default) : "",
                class: "form-control datepicker profile" %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :start_training_date %>
            </div>
            <div class="col-md-7">
              <%= ff.text_field :start_training_date, value: @user.profile.start_training_date ?
                l(@user.profile.start_training_date, format: :default) : "",
                class: "form-control datepicker profile" %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :leave_date %>
            </div>
            <div class="col-md-7">
              <%= ff.text_field :leave_date, value: @user.profile.leave_date ?
                l(@user.profile.leave_date, format: :default) : "",
                class: "form-control datepicker profile" %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :finish_training_date %>
            </div>
            <div class="col-md-7">
              <%= ff.text_field :finish_training_date, value: @user.profile.finish_training_date ?
                l(@user.profile.finish_training_date, format: :default) : "",
                class: "form-control datepicker profile" %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :contract_date %>
            </div>
            <div class="col-md-7">
              <%= ff.text_field :contract_date, value: @user.profile.contract_date ?
                l(@user.profile.contract_date, format: :default) : "",
                class: "form-control datepicker profile" %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :graduation %>
            </div>
            <div class="col-md-7">
              <%= ff.text_field :graduation,
                value: @user.profile_graduation ? l(@user.profile_graduation, format: :year_month) :
                  "", class: "form-control graduation profile" %>
            </div>
          </div>
        </div>

        <div class="col-md-6 profile-form">
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :user_type %>
            </div>
            <div class="col-md-7">
              <%= select_profile_field "user_type", @supports.user_types, ff %>
            </div>
            <%= link_to "#", data: {toggle: "modal", target: "#usertype-modal"} do %>
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <% end %>
          </div>
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :university %>
            </div>
            <div class="col-md-7">
              <%= select_profile_field "university", @supports.universities, ff %>
            </div>
            <%= link_to "#", data: {toggle: "modal", target: "#university-modal"} do %>
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <% end %>
          </div>
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :programming_language %>
            </div>
            <div class="col-md-7">
              <%= select_profile_field "programming_language", @supports.programming_languages, ff %>
            </div>
            <%= link_to "#", data: {toggle: "modal", target: "#programminglanguage-modal"} do %>
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <% end %>
          </div>
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :status %>
            </div>
            <div class="col-md-7">
              <%= select_profile_field "status", @supports.statuses, ff %>
            </div>
            <%= link_to "#", data: {toggle: "modal", target: "#status-modal"} do %>
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <% end %>
          </div>
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :working_day %>
            </div>
            <div class="col-md-7">
              <%= ff.number_field :working_day, step: Settings.working_day.step,
                min: Settings.working_day.min, max: Settings.working_day.max,
                class: "form-control profile" %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-4">
              <%= ff.label :ready_for_project %>
            </div>
            <div class="col-md-7">
              <%= ff.check_box :ready_for_project, {}, 1, 0 %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
