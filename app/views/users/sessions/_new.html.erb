<section id="login" >
  <div class="row">
    <div class="col-xs-12">
      <div class="form-wrap">
        <h1><%= t "signins.banner" %></h1>
        <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, placeholder: t("user.fields.email"), class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off",
              placeholder: t("user.fields.password"), class: "form-control" %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <span><%= f.check_box :remember_me, class: "character-checkbox" %></span>
              <span><%= f.label :remember_me, t("signins.remember"), class: "fixed-label" %></span>
              <span class="pull-right">
                <%= link_to t("user.forgot_password"),
                  new_user_password_path(resource_name) %>
              </span>
            </div>
          <% end %>
          <%= f.submit t("user.login"), class: "btn btn-custom btn-lg btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
<%= javascript_include_tag "signin", "data-turbolinks-track": true %>
